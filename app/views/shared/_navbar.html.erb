<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <form class="product-search form-inline my-2 my-lg-0 d-flex align-items-center flex-grow-1" action="/products/search" method="get">
    <div class="input-search">
      <input class="form-control-lg mr-sm-2" type="text" name="product" placeholder="Search for items or shops" aria-label="Search">
      <button class="search-btn btn btn-lg btn-red" type="submit"><i class="fas fa-search-dollar"></i></button>
    </div>
  </form>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <div class="three-items">
        <li class="nav-item">
        <%= link_to "Sell on Etsy", profile_sell_path, class: "three-item" %>
        </li>
        <li class="nav-item">
        <%= link_to "Register", new_user_registration_path, class: "three-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign in", new_user_session_path, class: "btn btn-outline-dark btn-sm mx-2 small" %>
        </li>
      <li>
        <hr style="width: 1px; height: 50px; background: rgb(238, 238, 238); border: none; margin: 0px;" class= "mx-2"/>
      </li>
      <div class="cart">
        <li class="nav-item">
          <%= link_to "cart" do %>
            <i class="nav-link fas fa-shopping-cart p-0 px-1"></i>
            <!-- <p class="text-center">cart</p> -->
          <% end %>
        </li>
      </div>
      </div>
      <% end %>
    </ul>
    <ul class="navbar-nav mr-auto">

    </ul>
  </div>
</div>
